<header>
 <nav class="navbar navbar-expand-lg navbar-dark bg-dark nav-navbar-light">
    <div class="container">
      <%= link_to t("foods_drinks"), root_path, class: "navbar-brand logo" %>
      <button class="navbar-toggler d-lg-none" type="button" data-toggle="collapse" data-target="#collapsibleNavId"
       aria-controls="collapsibleNavId" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavId">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <%= link_to t("header.home"), root_path, class: "nav-link" %>
          </li>

          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="dropdownId" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= t "header.language" %>
            </a>
            <div class="dropdown-menu" aria-labelledby="dropdownId">
              <a class="dropdown-item" href="#"><%= link_to t("vietnamese"), locale: :vi %></a>
              <a class="dropdown-item" href="#"><%= link_to t("english"), locale: :en %></a>
            </div>
          </li>
          <% if user_signed_in? %>
            <li class="dropdown nav-item">
              <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown">
                <%= t "header.account" %><b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t("header.order_manager"), admin_root_path, class: "dropdown-item" %></li>
                <li><%= link_to t("header.page_admin"), "http://localhost:3000/admin", class: "dropdown-item" %></li>
                <li><%= link_to t("header.profile"), current_user, class: "dropdown-item" %></li>
                <li><%= link_to t("header.settings"), "#", class: "dropdown-item" %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to t("header.log_out"), destroy_user_session_path, method: "delete", class: "dropdown-item" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li class="nav-item"><%= link_to t("header.log_in"), new_user_session_path,  class: "nav-link" %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>
